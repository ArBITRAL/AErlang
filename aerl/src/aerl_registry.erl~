%% 		[_Process] ->
%% 		    {error, pid_already_registered};
%% 		_ ->
%% 		    F = fun(_) -> true end,
%% 		    mnesia:dirty_write(#aerl_store{pid = Pid,
%% 						   id = maps:get(id,Env),
%% 						   env = Env,
%% 						   pred = F}),
%% 		    link(Pid)
%% 	    end,
